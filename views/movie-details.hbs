<div class="container">
    <div class="row">
        <div class="col-12 col-md-4">
            <img src="{{image}}" alt="">
        </div>
        <div class="col-12 col-md-8">
            <h1>Title: {{data.title}}</h1>
            <p>Director: {{data.director}}</p>
            <p>Description: {{data.description}}</p>
            <p>Release date: {{data.release_data}}</p>
            <p>Score: {{data.rt_score}}</p>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <p>Comments:</p>
            {{#each ratings}}
            <div class="user-ratings"></div>
            {{/each}}
        </div>
    </div>
</div>