<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h2>Edit your profile</h2>

            <hr>

            <form method="POST" action="/profile/{{id}}/edit" enctype="multipart/form-data">

                <div class="form-group">
                    <label for="username">Nickname:</label>
                    <input name="username" type="text" class="form-control" id="username" value="{{username}}">
                </div> 

                <div class="form-group">
                    <label for="name">Name:</label>
                    <input name="name" type="text" class="form-control" id="name"  value="{{name}}">
                </div>

                <div class="form-group">
                    <label for="imageFile">Image</label>
                    <input type="file" class="form-control-file" id="imageFile" name="imageFile">
                </div>

                <button type="submit" class="btn btn-dark">Save</button>
                <a class="btn btn-dark" href="/profile">Back to your profile</a>
            </form>

        </div>
    </div>


</div>