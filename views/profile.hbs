<section class="container-profiledesign">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <hr>
            <h1>Hi {{user.username}}! This is your profile</h1>
            <hr>
            <img src="{{user.avatar}}" width="300" height="300" class="float-left mr-4">
            <div class="avatar design">
                <p>Nickname: {{user.username}}</p>
                <a class="btn btn-dark" href="/profile/{{user.id}}/edit">Edit your profile</a>
            </div>


            <div class="movies">
                <hr>
                <h1>My movies</h1>
                <hr>

                <h2>Watched movies: {{user.watchedMovies}}</h2>
                <h2>Pending movies</h2>

                {{#each pendingMovies}}
                <img src="{{this.image}}" alt="">
                <h3>{{this.title}}</h3>
                {{/each}}
                <a class="btn btn-dark" href="/">Edit your movies</a>
            </div>
        </div>
    </div>
</section>