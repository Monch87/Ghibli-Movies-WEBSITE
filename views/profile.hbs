<section class="container-profiledesign">
    <div class="row">
        <div class="col-md-3">
            <div class="avatar-profile">
                <hr>
                <h1>Hi {{user.username}}!</h1>
                <p>This is your profile</p>
                <hr>
                {{!-- <div class='container'> --}}
                    <img class="avatar-design" src="{{user.avatar}}" width="200" height="200">
                    {{!-- <div class="text-avatar"> --}}
                        {{!-- <p id="nickname">{{user.username}}</p> --}}
                        <a class="btn btn-dark" href="/profile/{{user.id}}/edit">Edit your profile</a>
                        {{!--
                    </div>
                </div> --}}
            </div>
        </div>
        <div class="col-md-2">
            <div class="movies-avatar">
                <hr>
                <h1>My movies</h1>
                <hr>

                <h2>Watched movies: {{user.watchedMovies}}</h2>
                <h2>Pending movies</h2>

                {{#each pendingMovies}}
                <img src="{{this.image}}" alt="">
                <h3>{{this.title}}</h3>
                {{/each}}
                <a class="btn btn-dark" href="/">Edit your movies</a>
            </div>
        </div>
    </div>
</section>